<h1>Listing recipients</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Award</th>
    <th>Year</th>
    <th>Name</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipients.each do |recipient| %>
  <tr>
    <td><%= recipient.id %></td>
    <td><%= recipient.award_id %></td>
    <td><%= recipient.year %></td>
    <td><%= recipient.name %></td>
    <td><%= recipient.comments %></td>
    <td><%= link_to 'Show', recipient %></td>
    <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
    <td><%= link_to 'Destroy', recipient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

